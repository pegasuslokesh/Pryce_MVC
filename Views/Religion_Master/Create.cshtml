        margin-left: 250px; /* Adjust according to sidebar width */
        padding: 20px;
        width: calc(100% - 250px);
    }

    .content-area {
        margin-left: 650px; /* Same as other content */
        padding: 20px;
    }

    /* Remove margin-left from .card */
    .card {
        /* Other card styles */
    }

    /* Keep other styles if you have them */
    .card-header {
        /* Your card header styles */
    }

    .card-body {
        /* Your card body styles */
    }

    .form-label {
        /* Your form label styles */
    }

    .form-control {
        /* Your form control styles */
    }

    .form-select {
        /* Your form select styles */
    }

    .btn {
        /* Your button styles */
    }

    .content-container {
        display: flex;
        justify-content: space-between;
        margin-top: 80px;
        margin-left: 250px;
    }

    .tab-container {
        flex-shrink: 0;
    }

    .tab-content {
        margin-left: 250px;
        padding-left: 20px;
        margin-right: auto;
