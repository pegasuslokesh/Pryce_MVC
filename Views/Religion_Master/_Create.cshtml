<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="Religion_Name" class="form-label fw-bold">Religion Name</label>
        <input name="Religion_Name" class="form-control border-2"
               placeholder="Enter religion name"
               value="@(Model != null ? Model.Religion_Name : "")"
               required />
    </div>

    <div class="mb-3">
        <label for="Country_Id" class="form-label fw-bold">Select Country</label>
        <select name="Country_Id" class="form-select border-2"
                asp-items="@(ViewData["Country_Id"] as SelectList ?? new SelectList(new List<SelectListItem>()))">
            <option value="">-- Choose Country --</option>
        </select>





    </div>

    <button type="submit" class="btn btn-success w-100 fw-bold">Create</button>
</form>
